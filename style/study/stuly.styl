@require "./../global"

.study-list
  background-color: #f5f5f5
  padding: 15px 20%
  position: relative
  .study-item:nth-child(2)
    border-top: none !important
  a
    display: inline-block
    font-size: 25px
    color: $main-blue
    margin-bottom: 5px
    padding: 0 5px
    cursor: pointer
    transition: 1s ease
    text-decoration: none
  a:hover
    color: darken($main-blue, 20%)
    text-decoration: none
    
  .study-item
    padding: 10px 20px 30px 20px
    border-top: 1px solid #ddd
    margin-bottom: 10px
    transition: 0.3s ease
    &:hover
      background-color: #FFF
      border-radius: 8px
      box-shadow: inset 0 0 5px #ccc
    .study-content
      font-size: 15px
      text-indent: 40px
      margin-top: 5px
      margin-bottom: 0px
      color: #444
    .study-time
      color: $font-color
      font-size: 12px
      margin: 0 0 0 15px
      padding-left: 14px
      text-align: right
      background: url("./../assets/images/date.png") left center no-repeat
      background-size: 10px
    .study-tag
      padding-left: 14px
      background: url("./../assets/images/tag.png") left center no-repeat
      background-size: 10px
      font-size: 12px
    .study-more
      float: right
      color: $main-blue
      &:hover
        text-decoration: underline
        cursor: pointer
