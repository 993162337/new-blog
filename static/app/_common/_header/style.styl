@require "../../../style/global"

._header
  background-color $background-gray
  border-bottom 1px solid $border-gray
  position relative
  .navs
    width 500px
    display flex
    justify-content center
    margin 0 auto
    padding 0
    list-style none
    position relative
    li
      width 100px
      padding 20px
      line-height 25px
      text-align center
      cursor pointer
      &:nth-last-child(1)
        position absolute
        left 0
        bottom 0
        border-bottom: 5px solid $main-blue
        box-sizing border-box
  ._header-user
    display: inline-flex
    position absolute
    display flex
    align-items center
    height 65px
    overflow hidden
    top 0
    right 50px
    font-size 14px
    color darken($main-blue, 20%)
    img
      margin-left: 15px
      width: 40px
      height: 40px
      border-radius: 100%
      border: 2px solid white
    span
      cursor pointer
