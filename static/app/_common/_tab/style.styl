@require "../../../style/global"

._tab
  top: 0
  left: 0
  border-right: 1px solid #ddd
  ul
    width: 100%
    height: 90%
    list-style: none
    margin: 0
    padding: 0
    color: #666
    li:nth-child(1)
      margin-top: 20%
    li
      height: 50px;
      line-height: 50px;
      width: 100%;
      text-align: center;
      border-top: 1px solid #f5f5f5
      border-bottom: 1px solid #f5f5f5
    li.active
      border-top: 1px solid #ddd
      border-bottom: 1px solid #ddd
      box-shadow: 2px 0 2px #f6f6f6
      color: $main-blue
