.about
  .about-logo
    text-align: center
    padding-top: 40px
    img
      width: 150px
      border-radius: 100%
      border: 5px solid white
      box-shadow: 0 0 5px #ccc
      transition: 1s ease
    img:hover
      transform: rotateY(360deg)
      -webkit-transform: rotateY(360deg)
      -moz-transform: rotateY(360deg)
      -ms-transform: rotateY(360deg)
      -o-transform: rotateY(360deg)