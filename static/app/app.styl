@require "global"

*
  margin 0
body
  line-height 13px
  font-size 12px
  background #f5f5f5
  label
    cursor pointer
    margin-right 10px
  #container
    .content-body
      display flex
      flex-direction column
      position fixed
      left 0
      height 100%
      width 100%
      > div:not(.content-body__header)
        flex 1
      .content
        width 100%
        display flex
        flex 1
      .foot
        margin 0
        padding 0
        background-color #333
        color white
        height 40px
        display block
        width 100%
        line-height 40px
        text-align center
        z-index 9999
        font-size 12px

.content-body__header
  background linear-gradient(to right, $main-blue, $main-green)
  position relative
  box-shadow 0 0 10px rgba(0, 0, 0, .2)

.content-body__header__navs_pc
  width 500px
  display flex
  justify-content center
  margin 0 auto
  padding 0
  list-style none
  position relative
  color: white
  li
    width 100px
    padding 20px
    line-height 25px
    text-align center
    cursor pointer
    &:nth-last-child(1)
      position absolute
      left 0
      bottom 0
      width 100px
      padding 0
      height 5px
      border-radius 2px 2px 0 0
      background white
      box-sizing border-box

.content-body__header__navs_mobile
  display: inline-block
  position: relative
  height: 2rem
  width: 2rem
  margin: 0.5rem
  text-align: center
  i
    font-size: 1.5rem
    line-height: 2rem
    cursor: pointer
  ul
    display: none
    width: 102vw
    position: absolute
    top: 2.6rem
    left: -1rem
    padding: 1rem 0
    margin: 0
    list-style: none
    border-bottom: 1px solid $border-gray
    background: rgba($background-gray, .9)
    z-index: 9999
    li
      padding: 15px
      text-align: center

.content-body__header_contact
  position: absolute
  right: 10px
  top: 50%
  margin-top: -9px
  cursor: pointer
  font-size: 1.5em
  i
    color: white
    cursor: pointer
  &.mobile
    display: inline-block
    position: relative
    margin-left: auto
    float: right
    margin: 0.5rem
    i
      font-size: 2rem
      margin-right: 0 !important
    a
      display: inline-block
      height: 32px
