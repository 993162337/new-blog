@require "../../style/global"

.study-list
  background-color: #f5f5f5
  position: relative
  font-family: "ubuntu"
  display: flex
  width: 100%
  ._tab
    flex: 1
    overflow: hidden
  .artical-list
    flex: 5
    padding: 20px 50px 10px 50px
    overflow: auto
    .study-item:nth-child(1)
      border-top: none !important
    .study-item
      padding: 10px 20px 30px 20px
      border-top: 1px solid #ddd
      margin: 10px 0
      transition: 0.3s ease
      &:hover
        background-color: #FFF
        border-radius: 8px
        box-shadow: inset 0 0 5px #ccc
      a
        display: block
        font-size: 25px
        line-height: 35px
        color: $main-blue
        cursor: pointer
        transition: 1s ease
        text-decoration: none
      a:hover
        color: darken($main-blue, 20%)
        text-decoration: none
      .study-content
        font-size: 15px
        text-indent: 40px
        margin-top: 5px
        margin-bottom: 0px
        line-height: 22px
        color: #444
      .study-time
        color: $font-color
        font-size: 12px
        margin: 0 0 0 15px
        padding-left: 14px
        text-align: right
        background-size: 10px
      .study-tag
        padding-left: 14px
        background-size: 10px
        font-size: 12px
      .study-more
        float: right
        color: $main-blue
        &:hover
          text-decoration: underline
          cursor: pointer
  .artical
    flex: 5
    padding: 20px 50px 10px 50px
    h2
      text-align: center
      color: darken($main-blue, 15%)
      margin-bottom: 25px
    .artical-date
      font-size: 10px
      text-align: center
      color: #666
    .artical-content
      font-size: 16px
      line-height: 35px
      text-indent: 35px
      font-family: "ubuntu"
      color: #666
    .button
      text-align: center
      a
        width: 50px
        height: 50px
        line-height: 46px
        border-radius: 100%
        margin: 30px 0
        font-weight: bolder
        font-size: 17px
        color: #999
        background-image: none
      a:hover
        color: #999
