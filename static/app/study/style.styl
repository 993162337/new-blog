@require "global"

.study-list
  position relative
  display flex
  ._block-empty
    flex: 1
    width: 100%
    height: 100vh
    flex-direction: column
  ._tab
    overflow hidden
    padding 40px 0
    border-right: 1px solid #DDD
    height 100vh
    background white
    margin-left -80px
    animation slideRight .5s
    animation-fill-mode forwards
    @keyframes slideRight
      0% {
        margin-left -80px
      }
      100% {
        margin-left 0px
      }
    ul
      display flex
      flex-direction column
      li
        flex 1
        display flex
        align-items center
        justify-content center
        width 60px
        height 60px
        margin 0 10px
        color #666
        box-sizing border-box
        border-radius 100%
        background white
        cursor pointer
        &:hover
          color: white !important
          animation background .5s
          animation-fill-mode forwards
          background linear-gradient(45deg, $main-blue, $main-green)
          @keyframes background
            0% {
              opacity .5
            }
            100% {
              opacity 1
            }
          
  .artical-list
    padding 60px 10px
    flex 5
    overflow auto
    width 100%
    box-sizing border-box
    display flex
    justify-content flex-start
    align-items flex-start
    .study-item
      flex 1
      margin-right 10px
      max-height 200px
      box-sizing border-box
      padding 10px 20px 20px 20px
      margin-bottom 10px
      background white
      transition 0.4s ease-in-out
      border-radius  0 5px 5px 0
      background-size 2px 100%
      background-repeat no-repeat
      border-left 3px solid $main-blue
      cursor pointer
      &:hover
        border-left-color $main-green
        background linear-gradient(45deg, rgba($main-blue, .8), rgba($main-green, .8))
        background-repeat no-repeat
        background-size 100% 100%
        border-radius 5px
        a
          -webkit-text-fill-color white
        .study-content
        .study-tag span
        .study-more
          color: white !important
      a
        margin 15px 0
        font-size 1.5rem
        line-height: 3.5rem
        color $main-blue
        -webkit-background-clip text
        -webkit-text-fill-color transparent
        background-image linear-gradient(to right, $main-blue, $main-green)
        cursor pointer
        text-decoration none
      .study-content
        font-size 15px
        text-indent 40px
        margin-top 10px
        margin-bottom 10px
        line-height 22px
        color #444
        height 70px
      .study-tag span
        color: darken($border-gray, 20%)
        padding-left 10px
      .study-more
        color $main-green
        &:hover
          text-decoration underline
          cursor pointer
  .artical
    flex 5
    padding 20px 50px 10px 50px
    h2
      text-align center
      color darken($main-blue, 15%)
      margin-bottom 25px
    .artical-date
      font-size 10px
      text-align center
      color #666
    .artical-content
      font-size 16px
      line-height 35px
      text-indent 35px
      color #666
    .button
      text-align center
      a
        width 50px
        height 50px
        line-height 46px
        border-radius 100%
        margin 30px 0
        font-weight bolder
        font-size 17px
        color #999
        background-image none
      a:hover
        color #999
