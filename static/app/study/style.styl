@require "global"

.study-list
  background-color #f5f5f5
  position relative
  display flex
  flex-direction column
  width 100%
  ._block-empty
    flex: 1
    width: 100%
    height: 100%
    flex-direction: column
  ._tab
    overflow hidden
    padding 0
    background-color #ddd
    ul
      display flex
      width: 50%
      margin: 0 auto
      li
       flex 1
       cursor pointer
       padding 10px 20px
       color white
  .artical-list
    flex 5
    margin auto
    overflow auto
    width: 100%
    .study-item
      padding 10px 20px 30px 20px
      margin 20px auto
      background white
      box-shadow 0 0 5px #ccc
      transition 0.3s ease
      border-radius 3px
      width: 70%
      &:hover
        box-shadow 0 0 5px $main-blue
      a
        display block
        margin 15px 0
        font-size 25px
        line-height: 28px
        color $main-blue
        -webkit-background-clip text
        -webkit-text-fill-color transparent
        background-image linear-gradient(to right, $main-blue, $main-green)
        cursor pointer
        text-decoration none
      .study-content
        font-size 15px
        text-indent 40px
        margin-top 15px
        margin-bottom 0px
        line-height 22px
        color #444
      .study-tag span
        color: darken($border-gray, 20%)
      .study-more
        float right
        color $main-green
        &:hover
          text-decoration underline
          cursor pointer
  .artical
    flex 5
    padding 20px 50px 10px 50px
    h2
      text-align center
      color darken($main-blue, 15%)
      margin-bottom 25px
    .artical-date
      font-size 10px
      text-align center
      color #666
    .artical-content
      font-size 16px
      line-height 35px
      text-indent 35px
      color #666
    .button
      text-align center
      a
        width 50px
        height 50px
        line-height 46px
        border-radius 100%
        margin 30px 0
        font-weight bolder
        font-size 17px
        color #999
        background-image none
      a:hover
        color #999
